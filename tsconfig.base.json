{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "es2022",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2020",
    "paths": {
      "@ng-guitar/etude": ["libs/etude/src/index.ts"],
      "@ng-guitar/fretboard": ["libs/fretboard/src/index.ts"],
      "@ng-guitar/shared-storybook": ["libs/shared-storybook/src/index.ts"],
      "@ng-guitar/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@ng-guitar/tab-scroller": ["libs/tab-scroller/src/index.ts"],
      "@ng-guitar/theory": ["libs/theory/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
